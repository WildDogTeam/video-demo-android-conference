<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wilddog.video.demo.InputIdActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorMeetingTitleBar"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Video 多人视频会议"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                />


        </LinearLayout>


    </FrameLayout>
    <View
        android:layout_marginTop="100dp"
        style="@style/view_hori"
        />

    <EditText
        android:id="@+id/et_conference_id"
        style="@style/EditTextInput"
        android:hint="请输入会议 ID"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="text"
        android:text=""

        />

    <View
        style="@style/view_hori"
        />
    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="如果你没有会议ID,请自定义ID并创建会议。"
        android:textColor="@color/colorTextBlack"
        android:visibility="visible"/>

    <Button

        android:id="@+id/btn_join_conference"
        style="@style/ButtonBlueLarge"
        android:layout_gravity="center|center_vertical"
        android:layout_marginTop="20dp"
        android:text="确定"
        />

</LinearLayout>
