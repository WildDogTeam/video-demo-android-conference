<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="view_hori">
        <item name="android:background">#ccc</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="NotitleTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    <!--输入框样式-->
    <style name="EditTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorTextGray</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--大按钮样式-->
    <style name="ButtonBlueLarge">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_blue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorTextWihte</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLargeDark">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextLargeGrayDark">
        <item name="android:textColor">@color/colorTextGrayDark</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextLargeGray">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextSmallGray">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextSmallBlue">
        <item name="android:textColor">@color/colorTextBlue</item>
        <item name="android:textSize">9sp</item>
    </style>

